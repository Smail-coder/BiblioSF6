{% extends 'base.html.twig' %}

{% block title %}Catégorie : {{ categorie.nom }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Catégorie : {{ categorie.nom }}</h1>

        <div class="mb-4">
            <h2>Informations sur la catégorie</h2>
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ categorie.id }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ categorie.nom }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="mb-4">
            <h2>Livres dans cette catégorie</h2>
            {% if livres|length > 0 %}
                <div class="row">
                    {% for livre in livres %}
                        <div class="col-md-4 mb-4">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">{{ livre.titre }}</h5>
                                    <p class="card-text">Auteur : {{ livre.auteur }}</p>
                                    <!-- Ajoutez d'autres détails du livre si nécessaire -->
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <p>Aucun livre dans cette catégorie.</p>
            {% endif %}
        </div>

        <div class="mt-3">
            <a href="{{ path('app_categorie_index') }}" class="btn btn-secondary">Retour à la liste</a>
            <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="btn btn-primary">Modifier</a>
            {{ include('categorie/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}

