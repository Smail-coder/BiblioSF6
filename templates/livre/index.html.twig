{% extends 'base.html.twig' %}

{% block title %}Liste des livres{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center secondtitle">📖 Mes livres 📖</h1>

        <div class="table-responsive">
            <table class="table table-dark table-striped table-bordered gothic-table">
                <thead class="thead-gothic">
                    <tr>
                        <th scope="col" class="gothic-col-title">Titre</th>
                        <th scope="col" class="gothic-col-title">Auteur</th>
                        <th scope="col" class="gothic-col-title text-center">Actions</th> {# Nouvelle colonne pour les boutons #}
                    </tr>
                </thead>
                <tbody>
                    {% for livre in livres %}
                        <tr>
                            <td>{{ livre.titre }}</td>
                            <td>{{ livre.auteur }}</td>
                            <td class="text-center">
                                <a href="{{ path('app_modifier', {id: livre.id}) }}" class="btn btn-warning btn-sm">✏ Modifier</a>
                                <a href="{{ path('app_supprimer', {id: livre.id}) }}" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce livre ?');">🗑 Supprimer</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3" class="text-center">Aucun livre disponible</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <a href="{{ path('app_nouveau') }}" class="btn btn-danger gothic-btn">➕ Ajouter un livre</a>
    </div>
{% endblock %}
