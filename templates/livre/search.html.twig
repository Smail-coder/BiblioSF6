{% extends 'base.html.twig' %}

{% block title %}Résultats de recherche{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-white mb-4">Résultats de recherche pour "{{ query }}"</h2>
        
        {% if livres|length > 0 %}
            <div class="row">
                {% for livre in livres %}
                    <div class="col-md-4 mb-4">
                        {% include 'livre/_vignette.html.twig' with {'livre': livre} %}
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p>Aucun résultat trouvé.</p>
        {% endif %}
    </div>
{% endblock %}

